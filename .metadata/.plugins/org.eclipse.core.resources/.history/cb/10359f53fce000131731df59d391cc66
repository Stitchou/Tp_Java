		// TODO Auto-generated method stub
		
	}

	public void windowClosed(WindowEvent arg0) {
	
		
	}

	public void windowClosing(WindowEvent arg0) {
		int rep = JOptionPane.showConfirmDialog(null, "Sur?");
		if(rep==0)
			System.exit(0);
		else
			System.out.println(rep);
		
	}

