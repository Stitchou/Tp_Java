<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/cars"
    tools:context=".Second" >

    <Button
        android:id="@+id/autres"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accicents"
        android:layout_below="@+id/accicents"
        android:background="#FFFFFF"
        android:text="Autres" />

    <Button
        android:id="@+id/accicents"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radars"
        android:layout_below="@+id/radars"
        android:background="#FFFFFF"
        android:text="Accidents" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radars"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@+string/signaler"
        android:textSize="@dimen/text_dim_2" />

    <Button
        android:id="@+id/radars"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:background="#FFFFFF"
        android:text="Radars" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="63dp"
        android:layout_marginTop="36dp"
        android:background="#FFFFFF"
        android:checked="true"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toggleButton1"
        android:layout_alignTop="@+id/toggleButton1"
        android:layout_toLeftOf="@+id/toggleButton1"
        android:text="Tracking GPS :"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>